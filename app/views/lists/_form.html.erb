<style>
  .field_with_errors {border: 1px solid red;}
</style>  


<%= form_for(@list) do |f| %>
  <%= f.text_field :name %>

  <%= f.fields_for :items, @list.items.build do |item_form| %>
    <%= item_form.text_field :description %>
    <%= item_form.text_field :priority %>
  <% end %>

  <%= f.submit %>
<% end %> 